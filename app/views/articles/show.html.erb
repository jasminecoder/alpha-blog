
<h4 class="text-center pt-5">Title: <%= @article.title %></h4>

<% if @article.user %>
<div class="col-sm-8 offset-sm-2">
  <div class="card">
    <div class="card-body">
      <ul class="text-center list-unstyled mb-4">
        <div class="row">
          <div class="col-sm-4 offset-sm-4">
            <li>Created by:</li>
            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
            <li class="article-title">
              <%= link_to @article.user.username, user_path(@article.user) %>
            </li>
            <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
                </small></li>
         </div>
       </div>
     </ul>
  <% end %>
  <h4 class="text-center text-weight-bold">Description:</h4>

  <%= simple_format(@article.description) %>

  <div class="pt-2 border-top">
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", article_path(@article), method: :delete,
                                       data: {confirm:  "Are you sure you want to delete the article?"},
                                       class: "btn btn-xs btn-danger" %>
    <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
</div>
</div>
